<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Home type</th>
      <th>Room type</th>
      <th>Summary</th>
      <th>Address</th>
      <th>Is tv</th>
      <th>Is kitchen</th>
      <th>Is air</th>
      <th>Is heating</th>
      <th>Is internet</th>
      <th>Accomodate</th>
      <th>Bedroom</th>
      <th>Bathroom</th>
      <th>Sheet</th>
      <th>Price</th>
      <th>Active</th>
      <th>User</th>
      <th>Listing name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.home_type %></td>
        <td><%= room.room_type %></td>
        <td><%= room.summary %></td>
        <td><%= room.address %></td>
        <td><%= room.is_tv %></td>
        <td><%= room.is_kitchen %></td>
        <td><%= room.is_air %></td>
        <td><%= room.is_heating %></td>
        <td><%= room.is_internet %></td>
        <td><%= room.accomodate %></td>
        <td><%= room.bedroom %></td>
        <td><%= room.bathroom %></td>
        <td><%= room.sheet %></td>
        <td><%= room.price %></td>
        <td><%= room.active %></td>
        <td><%= room.user_id %></td>
        <td><%= room.listing_name %></td>
        <td><%= room.latitude %></td>
        <td><%= room.longitude %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

