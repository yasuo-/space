<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head'%>
  </head>

  <body>
  <% unless flash.empty? %>
      <script type="text/javascript">
        <% flash.each do |f| %>
        <% type = f[0].to_s.gsub('alert','error').gsub('notice','info') %>
        toastr['<%= type %>']('<%= f[1] %>');
        <% end %>
      </script>
  <% end %>
    <%= render 'host/header' %>
    <div class="content-wrapper">
      <div class="container-fluid">
        <%= yield %>
      </div>
    </div>
    <%= render 'host/footer' %>
  </body>
</html>
