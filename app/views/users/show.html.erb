<p id="notice"><%= notice %></p>
<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="#">Dashboard</a>
  </li>
  <li class="breadcrumb-item active">Profile</li>
</ol>
<!-- /Breadcrumbs-->

<section class="box_general u-pad_bottom_30">
  <div class="header_box version_2">
    <h2>Profile</h2>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= image_tag "#{@user.image}?type=large" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label>Name</label>
        <h3><%= @user.name %></h3>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label>Email</label>
        <h3><%= @user.email %></h3>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label>Password</label>
        <h3><%= @user.password %></h3>
      </div>
    </div>
  </div>
</section>

<%= link_to "編集する", edit_user_path(current_user), class: "button button--save u-border-rounded" %>
