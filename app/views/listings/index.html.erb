
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="text-center">
          <span style="font-size:18px;">リスティング一覧</span>
        </div>
      </div>
      <ul class="ul-unstyled">
        <% @listings.each do |listing| %>
          <li class="panel-body">
            <div class="row-table">
              <div class="col-md-3 col-sm-3 col-middle row-space-2">
                <div class="panel-list-img text-center">
                  <% if listing.photos.length > 0 %>
                    <%= image_tag listing.photos[0].image.url(:medium)  %>
                  <% else %>
                    <img src="http://placehold.jp/150x50.png">
                  <% end %>
                </div>
              </div>

              <div class="col-sm-7 col-lg-7 col-middle row-space-2">
                <span class="listing-title"><%= listing.listing_name%></span>
              </div>

              <div class="col-md-3 col-sm-3 col-middle row-space-1">
                <%= link_to "編集する", manage_listing_basics_path(listing), class: "btn btn-success pull-right" %>
                <% if false %>
                <%= link_to '削除する', listing, method: :delete, data: { confirm: '削除してもよろしいですか?' }, class: "btn btn-error pull-right" %>
                <% end %>
              </div>

            </div>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>


