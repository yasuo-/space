<%= form_for @listing do |f| %>
  <section class="box_general u-pad_bottom_30">
    <div class="header_box version_2">
      <h2>Price</h2>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label>Price</label>
          <%= f.text_field :price, placeholder: "例: 10,000", class: "form-control", required: "true" %>円
        </div>
      </div>
    </div>
  </section>

  <%= render 'shared/verticalnavbar'%>

  <p>
    <%= f.submit "Update", class: "button button--save u-border-rounded" %>
  </p>
<% end %>