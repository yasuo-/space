<%= form_for @listing do |f| %>
  <section class="box_general u-pad_bottom_30">
    <div class="header_box version_2">
      <h2>Basic info Description</h2>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label>Description</label>
          <%= f.text_area :summary, rows: 8, placeholder: "Listing Description", class: "form-control", required: "true" %>
        </div>
      </div>
    </div>
  </section>

  <%= render 'shared/verticalnavbar'%>

  <p>
    <%= f.submit "Update", class: "button button--save u-border-rounded" %>
  </p>
<% end %>